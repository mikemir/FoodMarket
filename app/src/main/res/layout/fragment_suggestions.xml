<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/espacio_norma_1"
    tools:context=".ui.suggestions.SuggestionsFragment">

    <TextView
        android:id="@+id/titulo_informacion_usuario"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tu sugerencia." />

    <ImageView
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_mark_email"/>

    <TextView
        android:layout_marginTop="30dp"
        android:text="Para Food [M]arket lo que nuestros clientes piensen es muy importante por eso puedes apoyarnos a mejorar mandandonos tus sugerencias en la parte de abajo."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Sugerencia para mejorar el servicio:"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:inputType="textMultiLine"
        android:gravity="top"
        android:hint="Esperamos que hayas disfrautado al maximo :D"
        android:lines="8"
        android:minLines="6"
        android:maxLines="10"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
            android:scrollbars="vertical" />

    <Button
        android:id="@+id/btSendSuggestion"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Enviar sugerencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>